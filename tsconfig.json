{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"outDir": "out",
		"target": "ESNext",
		"module": "CommonJS",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "dist"]
}
